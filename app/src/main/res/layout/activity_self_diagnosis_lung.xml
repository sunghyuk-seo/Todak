<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".self_diagnosis_lung">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="발열이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="기침을 합니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="마른 기침을 합니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="피로감을 느낍니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="두통이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="호흡 곤란을 겪은 적이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="240dp"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="갑자기 눕거나 누웠다가 앉을 때 흉부에서 무언가가 느껴집니까?"
                android:textSize="30sp" />


            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="입맛이 없으며 체중이 감소합니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="가슴 통증을 느낍니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="누런 가래가 나옵니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="근육통이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="인후통이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox13"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="콧물이 나옵니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox14"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="코막힘이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox15"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
