                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox16"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="기침이나 가래에서 피가 나옵니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox17"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="오한이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox18"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="호흡할 때 휘파람 같은 소리가 들릴 때가 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox19"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="과도한 호흡, 가쁜 호흡이 있습니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox20"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="어지러움을 느낍니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox21"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="손발에 경련이 일어납니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox22"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
                android:text="심장박동이 불규칙합니까?"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox23"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:fontFamily="@font/cookierun2"
